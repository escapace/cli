{
  "name": "@escapace/cli",
  "description": "",
  "version": "0.0.0",
  "author": {
    "name": "escapace",
    "email": "opensource@escapace.com"
  },
  "bugs": "https://github.com/escapace/cli/issues",
  "dependencies": {
    "arg": "^5.0.2",
    "lodash-es": "^4.17.21",
    "string-width": "^7.2.0",
    "wrap-ansi": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.1",
    "@commitlint/config-conventional": "19.6.0",
    "@escapace/pnpm-pack": "0.5.4",
    "@ls-lint/ls-lint": "2.2.3",
    "@types/lodash-es": "4.17.12",
    "@types/node": "22.10.2",
    "@vitest/coverage-v8": "2.1.8",
    "eslint": "9.17.0",
    "eslint-config-escapace": "5.4.1",
    "esroll": "0.3.1",
    "jsdom": "25.0.1",
    "knip": "5.41.0",
    "lefthook": "1.9.2",
    "prettier": "3.4.2",
    "prettier-config-escapace": "1.2.1",
    "syncpack": "13.0.0",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "vitest": "2.1.8"
  },
  "engines": {
    "node": ">=22.11.0",
    "pnpm": ">=9.14.4"
  },
  "exports": {
    ".": {
      "node": {
        "import": {
          "types": "./lib/types/index.d.ts",
          "default": "./lib/node/index.js"
        }
      },
      "browser": {
        "import": {
          "types": "./lib/types/index.d.ts",
          "default": "./lib/browser/index.js"
        }
      },
      "default": {
        "import": {
          "types": "./lib/types/index.d.ts",
          "default": "./lib/node/index.js"
        }
      }
    }
  },
  "files": [
    "lib/browser",
    "lib/node",
    "lib/types"
  ],
  "homepage": "https://github.com/escapace/cli#readme",
  "license": "MPL-2.0",
  "peerDependencies": {
    "@escapace/fluent": ">=4.3.1",
    "@escapace/typelevel": ">=2.0.2",
    "type-fest": ">=4.30.2"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": "escapace/cli",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "format": "syncpack format && eslint --no-warn-ignored --fix && prettier -uw .",
    "lint": "ls-lint --config .ls-lint.yaml && knip --no-config-hints && eslint",
    "ls-lint": "ls-lint --config .ls-lint.yaml",
    "pack": "pnpm-pack package --pack-destination lib",
    "prepare": "lefthook install",
    "syncpack": "syncpack fix-mismatches && syncpack set-semver-ranges && syncpack format",
    "test": "vitest --no-watch --coverage",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./lib/types/index.d.ts"
}
